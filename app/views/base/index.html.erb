<%= form_tag("countries/find_country", method: "post") do %>
    <table id="user-data">
      <tr>
        <td>
          <%= label_tag(:gender, "Пол") %>
          <select name="gender" id="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </td>
      </tr>
      <tr>
        <td>
          <%= label_tag(:height, "Рост") %>
          <%= select_tag(:height, options_for_select(155..210)) %>
        </td>
      </tr>
      <tr>
        <td>
          <%= label_tag(:weight, "Вес") %>
          <%= select_tag(:weight, options_for_select(60..90)) %>
        </td>
      </tr>
      <tr>
        <td>
          <%= label_tag(:hair_color, "Цвет волос") %>
          <%= select_tag(:hair_color, options_for_select(1..6)) %>
        </td>
      </tr>
      <tr>
        <td>
          <%= label_tag(:body_type, "Телосложение") %>
          <%= select_tag(:body_type, options_for_select(1..3)) %>
        </td>
      </tr>
      <tr>
        <td>
          <%= submit_tag("Search") %>
        </td>
      </tr>
    </table>
<% end %>